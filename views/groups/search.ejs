<!-- Update the search results section -->
<% if (groups.length > 0) { %>
    <div class="list-group">
        <% groups.forEach(group => { %>
            <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1"><%= group.name %></h5>
                        <p class="mb-1">
                            <span class="badge bg-secondary">ID: <%= group.groupId %></span>
                            <span class="badge bg-primary ms-2">
                                <i class="bi bi-people-fill"></i> <%= group.members.length %> members
                            </span>
                        </p>
                        <small>Admin: <%= group.admin.username %></small>
                    </div>
                    <a href="/groups/<%= group._id %>" class="btn btn-outline-primary">
                        View Group
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
<% } %> 