<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1>My Groups</h1>
        </div>
        <div class="col-md-6 text-md-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createGroupModal">
                <i class="bi bi-plus-circle"></i> Create Group
            </button>
        </div>
    </div>

    <% if (groups.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% groups.forEach(group => { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= group.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">ID: <%= group.groupId %></h6>
                            <p class="card-text"><%= group.description %></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Admin: <%= group.admin.username %><br>
                                    Members: <%= group.members.length %>
                                </small>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="/groups/<%= group._id %>" class="btn btn-outline-primary">
                                View Group
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center">
            <p class="text-muted">You haven't joined any groups yet.</p>
            <a href="/groups" class="btn btn-primary">Browse Groups</a>
        </div>
    <% } %>
</div> 